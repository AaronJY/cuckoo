{
	"name": "Cuckoo for Twitter",
	"description": "Hide Twitter like, retweet and reply counts.",
	"version": "2.0.0",
	"manifest_version": 2,
	"content_scripts": [
		{
			"matches": ["http://twitter.com/*", "https://twitter.com/*"],
			"js": ["hider.js", "content.js"],
			"css": ["hider.css"]
		}
	],
	"browser_action": {
		"default_popup": "popup.html"
	},
	"permissions": ["storage"]
}